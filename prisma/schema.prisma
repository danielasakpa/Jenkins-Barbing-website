datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String?
  googleId  String?  @unique
  address   Address?
  isAdmin   Boolean  @default(false)
  bookings  Booking[]
}

model Booking {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  userId          String    @db.ObjectId
  service         Json
  date            String
  time            String
  status          String?
  user            User      @relation(fields: [userId], references: [id])
}

model GalleryImage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl  String
  title     String?
}


// Address is an embedded document
type Address {
  street String
  city   String
  state  String
  zip    String
}


